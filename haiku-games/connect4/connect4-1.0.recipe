SUMMARY="The well known board game Connect Four"
DESCRIPTION="Connect-4 is a game where players take turns dropping pieces \
down a column. The first player to get four consecutive pieces in a row, \
column, or diagonal wins the game."
HOMEPAGE="https://github.com/HaikuArchives/Connect4"
COPYRIGHT="1997 Leo Chan"
LICENSE="GNU GPL v2"
REVISION="1"
srcGitRev="ffb298ebf06dd0e5fa8e6fccb7a6a0989f670cdc"
SOURCE_URI="https://github.com/HaikuArchives/Connect4/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="d780f110d32056421ff1453e87468519fc53d67a507476c30e15dbff869ed13e"
SOURCE_FILENAME="Connect4-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR="Connect4-$srcGitRev"
PATCHES="connect4-$portVersion.patchset"

ARCHITECTURES="x86_gcc2 x86_64"

PROVIDES="
	connect4 = $portVersion
	app:Connect4 = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects
}

INSTALL()
{
	mkdir -p $appsDir
	cp objects/Connect4 $appsDir
	addAppDeskbarSymlink $appsDir/Connect4
}

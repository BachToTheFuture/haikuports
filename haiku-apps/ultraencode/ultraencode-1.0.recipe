SUMMARY="CD audio extraction program"
DESCRIPTION="UltraEncode is a CD audio and extraction program. It is \
designed to allow the quick and easy extraction of CD audio tracks and \
compression of audio tracks. UltraEncode currently allows compression \
of files using MPEG Layer 3 encoding."
HOMEPAGE="https://github.com/HaikuArchives/UltraEncode"
COPYRIGHT="unknown"
LICENSE="unknown"
REVISION="1"
srcGitRev="a11c3cfbe4d44208e8869fa614fe1d523cc2f9b1"
SOURCE_URI="https://github.com/HaikuArchives/UltraEncode/archive/$srcGitRev.tar.gz"
CHECKSUM_SHA256="960267f99c6ffc978672bf3f3b0b843f99d92d98b833eb2e835d5ce9cc30bd47"
SOURCE_FILENAME="UltraEncode-$portVersion-$srcGitRev.tar.gz"
SOURCE_DIR="UltraEncode-$srcGitRev"
PATCHES="ultraencode-$portVersion.patchset"

ARCHITECTURES="x86_gcc2 x86_64"

PROVIDES="
	ultraencode = $portVersion
	app:UltraEncode = $portVersion
	"
REQUIRES="
	haiku
	"

BUILD_REQUIRES="
	haiku_devel
	"
BUILD_PREREQUIRES="
	makefile_engine
	cmd:g++
	cmd:make
	"

BUILD()
{
	make OBJ_DIR=objects
}

INSTALL()
{
	mkdir -p $appsDir
	cd objects
	cp UltraEncode $appsDir
	addAppDeskbarSymlink $appsDir/UltraEncode
}

SUMMARY="Python XML package"
DESCRIPTION="Python XML comes with a validating XML parser, an implementation of the SAX \
and DOM programming interfaces, an interface to the Expat parser (and the Expat parser \
itself), and a C helper module that can speed up xmllib.py by a factor of 5."
HOMEPAGE="http://pyxml.sourceforge.net/topics/index.html"
COPYRIGHT="2000 Fourthought Inc, USA"
LICENSE="PyXML"
REVISION="1"
SOURCE_URI="https://downloads.sourceforge.net/project/pyxml/pyxml/$portVersion/PyXML-$portVersion.tar.gz"
CHECKSUM_SHA256="9fab66f9584fb8e67aebd8745a5c97bf1c5a2e2e461adf68862bcec64e448c13"
SOURCE_DIR="PyXML-$portVersion"

ARCHITECTURES="any"

PROVIDES="
	$portName = $portVersion
	cmd:xmlproc_parse
	cmd:xmlproc_val
	"
REQUIRES="
	haiku
	cmd:python2.7
	python:html5lib
	python:requests
	python:six
	"

BUILD_REQUIRES="
	haiku_devel
	setuptools_python
	"
BUILD_PREREQUIRES="
	cmd:gcc
	cmd:python2.7
	"

BUILD()
{
	python=python2.7
	installLocation=$prefix/lib/$python/vendor-packages/
	export PYTHONPATH=$installLocation:$PYTHONPATH
	mkdir -p $installLocation
	rm -rf build
	$python setup.py build
}

INSTALL()
{
	python=python2.7
	installLocation=$prefix/lib/$python/vendor-packages/
	export PYTHONPATH=$installLocation:$PYTHONPATH
	mkdir -p $installLocation
	rm -rf build
	$python setup.py build install --root=/ --prefix=$prefix
}

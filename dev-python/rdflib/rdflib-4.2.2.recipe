SUMMARY="Python library for working with RDF"
DESCRIPTION="RDFLib is a Python library for working with RDF, a simple \
yet powerful language for representing information as graphs."
HOMEPAGE="https://github.com/RDFLib/rdflib"
COPYRIGHT="2002-2009 Daniel Krech"
LICENSE="Public Domain"
REVISION="1"
SOURCE_URI="http://github.com/RDFLib/rdflib/archive/$portVersion.zip"
CHECKSUM_SHA256="fe7fb695e840d812062c2fdc81b7ddb4e2b551e07a6635b7b4e5ac64a8fdabdd"
SOURCE_DIR="rdflib-$portVersion"

ARCHITECTURES="any"

PROVIDES="
	$portName = $portVersion
	cmd:csv2rdf
	cmd:rdf2dot
	cmd:rdfgraphisomorphism
	cmd:rdfpipe
	cmd:rdfs2dot
	"
REQUIRES="
	haiku
	cmd:python2.7
	"

BUILD_REQUIRES="
	haiku_devel
	setuptools_python
	"
BUILD_PREREQUIRES="
	cmd:python2.7
	"

BUILD()
{
	python=python2.7
	installLocation=$prefix/lib/$python/vendor-packages/
	export PYTHONPATH=$installLocation:$PYTHONPATH
	mkdir -p $installLocation
	rm -rf build
	$python setup.py build
}

INSTALL()
{
	python=python2.7
	installLocation=$prefix/lib/$python/vendor-packages/
	export PYTHONPATH=$installLocation:$PYTHONPATH
	mkdir -p $installLocation
	rm -rf build
	$python setup.py build install --root=/ --prefix=$prefix
}
